<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Directory</title>
    <link rel='stylesheet' href='styles.css'>
  </head>
  <body>
    <div class='profiles'>
      {{#users}}
        <div class='box'>
          <a href='/user/{{id}}' class='id_link'>
            <img src={{avatar}} class='avatars'>
            <p class='name'>{{name}}</p>
            {{#job}}
              <p class='job_company'>{{job}}<br>{{company}}</p>
            {{/job}}
            {{^job}}
              <p class='nojob'>Available for hire</p>
            {{/job}}
          </a>
        </div>
      {{/users}}
      {{^users}}
        <p>No data found!</p>
      {{/users}}
    </div>
  </body>
</html>
